      eventSource.close();
      setEventSource(null);
    }
  }, [eventSource]);

  useEffect(() => {
    return () => closeEventSource();
  }, [closeEventSource]);

  const handleRepositoryChange = useCallback((index: number, value: string) => {
    setState(prev => ({
      ...prev,
      repositories: prev.repositories.map((repo, i) =>
        i === index ? value : repo
      )
    }));
  }, []);

